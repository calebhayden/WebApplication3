@model WebApplication3.Models.MedicalInterpreterModel
@{
    ViewBag.Title = "InterpreterForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("MedicalInterpreter", "GetInvolved", FormMethod.Post))
{
    <br />
<h2 style="color:crimson; padding-left:5vw; padding-right:5vw">Medical Interpreter Volunteer Form</h2>
<div style="padding-left:5vw">
    <span class='right-header-link'>
        <li><a href="/user/sign_in_or_sign_up">Are you a Donor? Sign In</a></li>
        <li><a href="/user/sign_in_or_sign_up">Create An Account</a></li>
    </span>
</div>
<br />
<div style="padding-left:5vw">
    <label>First Name</label>
    <div>
        @Html.TextBoxFor(Model => Model.FirstName)
    </div>

    <label>LastName</label>
    <div>
        @Html.TextBoxFor(Model => Model.LastName)
    </div>

    <label>Address</label>
    <div>
        @Html.TextBoxFor(Model => Model.Address)
    </div>

    <label>City</label>
    <div>
        @Html.TextBoxFor(Model => Model.City)
    </div>

    <label>State</label>
    <div>
        @Html.TextBoxFor(Model => Model.State)
    </div>

    <label>Postal Code</label>
    <div>
        @Html.TextBoxFor(Model => Model.ZipCode)
    </div>

    <label>Mobile Phone</label>
    <div>
        @Html.TextBoxFor(Model => Model.PrimaryPhone)
    </div>

    <label>Birthday</label>
    <div>
        @Html.TextBoxFor(Model => Model.DateOfBirth)
    </div>

    <label>Preferred Name</label>
    <div>
        @Html.TextBoxFor(Model => Model.PreferredName)
    </div>



    <label>What/Which Language(s) can you interpret for?</label>
    <div style="height:10vw;width:12vw; solid #ccc;overflow:auto;">
        <div>@Html.CheckBoxFor(Model => Model.Spanish)<label>Spanish</label></div>
        <div>@Html.CheckBoxFor(Model => Model.Hindi)<label>Hindi</label></div>
        <div>@Html.CheckBoxFor(Model => Model.Arabic)<label>Arabic</label></div>
        <div>@Html.CheckBoxFor(Model => Model.Other)<label>Other</label></div>
    </div>
</div>
<br />
<div style="padding-left:5vw; padding-right:5vw"><input type="submit" name="commit" value="Submit" class="btn btn btn-dark btn-lg" data-disable-with="Saving..." /></div>

}
